<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h2 class="font-weight-bold", style="text-align:center">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="form-group row", style="margin-top: 20px"> 
        <%= f.label :email, class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
          <% if devise_mapping.rememberable? %>
            <div class="field", style="margin-top: 10px">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2"></div>
        <div class="actions col-md-5"> 
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>
      </div>

      <div class="row", style="margin-top: 20px">
        <div class="col-md-2"></div>
        <div class="actions col-md-5">            
          <%= f.submit "Log In", :class=> "btn btn-primary btn-block", :onclick=>'validateForm()'  %>
        </div>

        <div class="actions col-md-5">
          <%= link_to "Sign Up", new_registration_path(resource_name), :class=> "btn btn-primary btn-block" %>
        </div> 
        
      </div>
      
    <% end %>

    
  </div>
</div>
