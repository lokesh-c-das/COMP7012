
<div class="row">
<div class="col-sm-2"></div>
<div class="col-sm-8">
  <div class="row">
    <div class="col-sm-12 d-flex justify-content-center">
      <span class="h2 font-weight-bold text-info">Sign up </span>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
  html: { id: :reg_id }) do |f| %>
    <div class="row m-2 p-2">
      <div class="col-sm-2"></div>
      <div class="col-sm-10 d-flex justify-content-center"><%= render "devise/shared/error_messages", resource: resource %></div>
    </div>
  

    <div class="row form-group">
      <div class="col-sm-4">
        <%= f.label :photo, class:"d-flex flex-row-reverse font-weight-bold" %>
      </div>
      <div class="col-sm-8">
        <%= f.file_field :photo %>
      </div>
    </div>


    <div class="row form-group">
      <div class="col-sm-4">
        <%= f.label :name, class:"d-flex flex-row-reverse font-weight-bold" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, autofocus: true, required: true, class:"form-control" %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-4">
        <%= f.label :phone_no, class:"d-flex flex-row-reverse font-weight-bold" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :phone_no, autofocus: true, class:"form-control" %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-4">
        <%= f.label :uid, class:"d-flex flex-row-reverse font-weight-bold" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :uid, autofocus: true, class:"form-control", :id=>'UID' %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-4">
        <%= f.label :email, class:"d-flex flex-row-reverse font-weight-bold" %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-4">
        <%= f.label :password, class:"d-flex flex-row-reverse font-weight-bold" %>
      </div>
      <div class="col-sm-8">
          <% if @minimum_password_length %>
            <span class="text-danger"><em>(<%= @minimum_password_length %> characters minimum)</em></span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-4">
        <%= f.label :password_confirmation, class:"d-flex flex-row-reverse font-weight-bold" %>
      </div>
      <div class="col-sm-8">
         <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-4"></div>
      <div class="col-sm-8">
        <div class="row">
          <div class="col-sm-6"><%= f.submit "Sign Up", :class=> "btn btn-success btn-block"%></div>
          <div class="col-sm-6"><%= link_to "Log In", new_session_path(resource_name), :class=> "btn btn-info btn-block" %></div>
        </div>
      </div>
    </div>

  <% end %>
</div>
<div class="col-sm-2"></div>
</div>
