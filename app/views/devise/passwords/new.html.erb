<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 ">
    <h2 class="font-weight-bold text-info",, style="text-align:center">Forgot Your Password</h2> 

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="row m-2 p-2">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 d-flex justify-content-center"><%= render "devise/shared/error_messages", resource: resource %></div>
      </div>

      <div class="form-group row d-flex justify-content-end", style="margin-top: 1cm"> 
        <%= f.label :email, class:"d-flex flex-row-reverse font-weight-bold" %>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>

      <div class="row form-group d-flex justify-content-end", style="margin-top: 1cm">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
          <div class="row">
            <div class="actions col-sm-6"><%= f.submit "Reset Password", :class=> "btn btn-success btn-block" %></div>
            <div class="col-sm-6"><%= link_to "Log In", new_session_path(resource_name), :class=> "btn btn-info btn-block" %></div>
          </div>
        </div>
      </div>
      

    <% end %>

   </div>
</div>
