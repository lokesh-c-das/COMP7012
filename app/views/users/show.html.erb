<div class="row">
<div class=col-md-1></div>
<div class="col-md-10">
    <div class= "display-message col-md-12">
    <% if !reports.empty? %>
        <table class="table table-striped table-bordered">
            <tbody>
                <% reports.each do |report| %>
                    <tr>
                        <td>
                        <% if current_user.authority %>
                            <h4><strong>Reporter: <%= User.find(report.user_id).email %></strong></h4>
                        <% end %>
                        <h5><strong><%= report.message_time %></strong></h5>
                        <h6><strong>Subject: </strong><%= report.subject %></h6>
                        <h6><strong>Message: </strong><%= report.body %></h6>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    <% end %>
    <% if reports.length == 0 %>
        <% if !current_user.authority %>
            <h2 style="text-align: center;"><strong> You did not report any seller <strong></h2>
        <% else %>
            <h2 style="text-align: center;"><strong> No one reported yet <strong></h2>
        <% end %>
    <% end %>
    </div>
    <div style="text-align: center;">
        <%= link_to 'Back to home', home_path, :class=> "btn btn-primary" %>
    </div>
</div>
<div class=col-md-1></div>
</div>


