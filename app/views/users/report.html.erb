<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-9">
        <%= form_with url: report_authority_path, method: :post, local: true, scope: :report do |f| %>  
            <div class="form-group">
                <strong><%= f.label "Report to" %></strong>
                <%= content_tag :p, class: "form-control" do -%>
                    <%= link_to 'mailto:report@memphis.edu', '' %>
                <% end -%>
            </div>
            
            <div class="form-group">
                <strong><%= f.label "subject" %></strong>
                <%= f.text_area "subject", size: "5x1" , :class => 'form-control', :placeholder => "I want to report because...", required: true %>
            </div>

            <div class="form-group">
                <strong><%= f.label "message" %></strong>
                <%= f.text_area "body", size: "5x5" , :class => 'form-control', :maxlength => 500,
                :placeholder => "Type your message (Max 500 characters)", required: true%>
            </div>
            
            <div class="form-group">
                <%= f.text_field :user_id, value: current_user.id, type: "hidden"%>
            </div>
            
            <div class="form-group row">
                <div class="col-md-4">
                    <%= f.submit "Send", :class=>"btn btn-success btn-block"%>
                </div>
                <div class="col-md-4">
                    <%= link_to 'Past reports', view_report_path, :class=> "btn btn-info btn-block" %>
                </div>
                <div class="col-md-4">
                    <%= link_to 'Back to home', home_path, :class=> "btn btn-primary btn-block" %>
                </div>
                
            </div>
        <% end %>
    </div>
    <div class="col-md-1"></div>
</div>
